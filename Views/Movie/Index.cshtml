@model List<ASP.NET.Models.Movie>

<h2>Movies</h2>

<p>
	<a asp-controller="Movie" asp-action="Create">Create New</a>
</p>

<table class="table">
	<thead>
	<tr>
		<th>Title</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var movie in Model)
	{
		<tr>
			<td>@movie.Title</td>
			<td>
				<a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a> |
				<a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">Details</a> |
				<a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
			</td>
		</tr>
	}
	</tbody>
</table>