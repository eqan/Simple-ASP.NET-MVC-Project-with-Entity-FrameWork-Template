@model ASP.NET.Models.Movie

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>
<div>
	<h4>Movie</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Title</dt>
		<dd class="col-sm-10">@Model.Title</dd>
	</dl>
</div>

<form asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" method="post">
	<input type="submit" value="Delete" class="btn btn-danger" />
	<a asp-controller="Movie" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>